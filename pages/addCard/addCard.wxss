/* pages/addCard/addCard.wxss */

.content_box{
    margin-top: 40rpx;
    font-size: 28rpx;
    color: #000;
    background-color: #fff;
    padding-left: 20rpx;
    border-top: 2rpx solid #D9D9D9;
    border-bottom: 2rpx solid #D9D9D9;
}
.content_box view:last-child{
    border: none;
}
.content_box view{
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    border-bottom: 2rpx solid #D9D9D9;
    box-sizing: content-box;
}
.content_box text{
    /* margin-right: 64rpx; */
    width: 196rpx;
}
.content_box input{
    width: 100%;
    height: 88rpx;
}

.next_btn{
    width: 600rpx;
    height: 68rpx;
    background-image: linear-gradient(to right, #FFB43C,  #FF504C);
    box-shadow: 0 4rpx 10rpx -4rpx #FF543A;
    margin: 288rpx auto 0;
    font-size: 32rpx;
    color: #fff;
    text-align: center;
    line-height: 68rpx;
    border-radius: 68rpx;
    font-weight: bold;
}