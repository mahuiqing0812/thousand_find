<!--pages/addCard/addCard.wxml-->
<view class="content_box">
    <view>
        <text>持卡人姓名</text>
        <input type="text" bindinput="handlenameinput" value="{{OpenBankUserName}}" placeholder="请输入持卡人姓名"/>
    </view>
    <view>
        <text>银行卡号</text>
        <input type="text" bindinput="handlenoinput" value="{{CardNo}}" placeholder="请输入银行卡号" />
    </view>
    <view>
        <text>开户支行</text>
        <input type="text" bindinput="handlebankinput" value="{{OpenBank}}" placeholder="请输入开户行，如：招商银行望京融科支行" />
    </view>
    <view>
        <text>手机号</text>
        <input type="text" bindinput="handlephoneinput" value="{{OpenPhone}}" placeholder="请输入开户预留手机号" />
    </view>

</view>
<view class="next_btn" bindtap="skip_addCard_success">下一步</view>
