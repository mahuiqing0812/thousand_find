/* pages/cashoutResult/cashoutResult.wxss */
.cash_out {
    width: 690rpx;
    height: 770rpx;
    margin: 0 auto;
    background-color: #fff;
    margin-top: 40rpx;
    border-radius: 8rpx;
    position: relative;
    padding: 286rpx 30rpx 0;
    box-sizing: border-box;
    text-align: center;
}

.cash_out .auditing {
    font-size: 32rpx;
    color: #333;
}

.cash_out .account_time {
    font-size: 28rpx;
    color: #999;
    margin-top: 24rpx;
}

.cash_out .line {
    width: 100%;
    border-bottom: 2rpx dashed #D9D9D9;
    margin-top: 40rpx;
}

.cash_out image.txcg {
    width: 192rpx;
    position: absolute;
    top: 88rpx;
    left: 50%;
    transform: translateX(-50%);
}

.cash_out .cashOut_flow {
    margin-top: 100rpx;
}

.cash_out .cashOut_flow image {
    width: 98rpx;
}

.cash_out .cashOut_flow image.cashOut_flow_line {
    width: 102rpx;
    border: 0;
    position: relative;
    top: -84rpx;
}

.bottom_bar {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    box-sizing: border-box;
    border-top: 2rpx solid #F2F2F2;
    background-color: #fff;
}

.bottom_bar view {
    width: 600rpx;
    height: 68rpx;
    line-height: 68rpx;
    border-radius: 68rpx;
    color: #fff;
    font-size: 32rpx;
    text-align: center;
    background-image: linear-gradient(to right, #FFB43C, #FF504C);
    box-shadow: 0 2px 5px -2px #FF543A;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%)
}

/* 驳回原因 */
.audit_fail {
    width: 630rpx;
    background: #F9F9F9;
    border: 2rpx dashed #D9D9D9;
    border-radius: 8rpx;
    color: #999999;
    font-size: 24rpx;
    line-height: 34rpx;
    padding: 20rpx;
    box-sizing: border-box;
    margin-top: 24rpx;
    text-align: left;
}