/* pages/myWallet/myWallet.wxss */
page {
    padding-bottom: 30rpx;
}

.wallet_overview {
    /* background: url("https://extensionsapi.1863.cn/images_wechat/my_wallet_bg.png"); */
    background: url("https://extensionsapi1.1863.cn/images_wechat/my_wallet_bg.png");
}

.wallet_overview {
    height: 500rpx;
    background-size: cover;
    text-align: center;
    position: relative;
    color: #fff;
    padding-top: 144rpx;
    box-sizing: border-box;
}

.wallet_overview .wallet_num {
    font-size: 60rpx;
}

.wallet_overview .wallet_txt {
    font-size: 24rpx;
    margin-top: 10rpx;
}

.wallet_btns {

    font-size: 28rpx;
    color: #EE3344;
    position: relative;
    height: 60rpx;
    top: 50rpx;
}

.wallet_btns view {
    width: 200rpx;
    height: 60rpx;
    line-height: 60rpx;
    background-color: #fff;
    box-shadow: 0 2px 5px 0 rgba(193, 64, 55, 0.50);
    border-radius: 56rpx;
    position: absolute;
    right: 74rpx;
}

.wallet_btns .deposit {
    left: 126rpx;
}

.wallet_btns .withdraw {
    right: 126rpx;
}

.wallet_skip_btns view {

    color: #fff;
    font-weight: bold;
    font-size: 24rpx;
    position: absolute;
    bottom: 60rpx;
}

.my_cardbtn {
    left: 54rpx;
}

.cash_record {
    right: 54rpx;
}

/* 交易明细开始 */
.trade_detail .trade_detail_tit {
    margin: 20rpx 0 40rpx 0;
    padding-left: 30rpx;
    color: #333;
    font-size: 36rpx;
}

.trade_detail .trade_detail_list {
    color: #999;
    font-size: 24rpx;
}

.trade_detail .trade_detail_list .trade_list_item {
    margin-bottom: 20rpx;
    background-color: #fefefe;
    border-bottom: 2rpx solid #F2F2F2
}

.trade_detail .tradeList_item_hd {
    overflow: hidden;
    padding: 0 30rpx;
    box-sizing: border-box;
    height: 60rpx;
    line-height: 60rpx;
    border-bottom: 2rpx solid #F2F2F2;
}

.trade_detail .tradeList_item_bd {
    padding: 34rpx 30rpx;
    box-sizing: border-box;
}

.trade_detail .tradeList_item_bd .trade_type {
    font-size: 28rpx;
    margin-bottom: 20rpx;
}

.trade_detail .tradeList_item_bd .trType3 {
    color: #63BC00;

}

.trade_detail .tradeList_item_bd .trType2 {
    color: #EE3344;
}


.trade_detail .tradeList_item_bd .trType4 {
    color: darkorange;
}

.trade_detail .tradeList_item_bd .trade_remark {
    margin-bottom: 20rpx;
}

.trade_detail .tradeList_item_bd .trade_time {
    margin-left: 20rpx;
}

.trade_detail .tradeList_item_bd .trade_status {
    margin-bottom: 20rpx;
}



/* 点击充值按钮的弹框 */
.modal-mask {

    width: 100%;

    height: 100%;

    position: fixed;

    top: 0;

    left: 0;

    background: #000;

    opacity: 0.5;

    overflow: hidden;

    z-index: 9000;

    color: #fff;

}

.modal-dialog {

    width: 540rpx;

    overflow: hidden;

    position: fixed;

    top: 36%;

    left: 0;

    z-index: 9999;

    background: #fff;

    margin: -180rpx 105rpx;

    border-radius: 36rpx;

}

.modal-title {

    padding-top: 50rpx;

    font-size: 36rpx;

    color: #333;

    text-align: center;

}

.modal-content {

    padding: 50rpx 32rpx;

}

.modal-input {

    display: flex;

    background: #fff;


    border-radius: 4rpx;

    font-size: 28rpx;

}

.input {

    width: 100%;

    height: 82rpx;

    font-size: 28rpx;

    line-height: 28rpx;

    padding: 0 20rpx;

    box-sizing: border-box;

    color: #333;

}

input-holder {

    color: #666;

    font-size: 28rpx;

}

.modal-footer {

    display: flex;

    flex-direction: row;

    height: 86rpx;

    border-top: 2rpx solid #dedede;

    font-size: 34rpx;

    line-height: 86rpx;

}

.btn-cancel {

    width: 50%;

    color: #666;

    text-align: center;

    border-right: 2rpx solid #dedede;

}

.btn-confirm {

    width: 50%;

    color: #EE3344;

    text-align: center;

}